<div class="customer">
  <div class="actions">
    <%= link_to 'edit', edit_customer_path(customer) %>
    <%= link_to 'x', customer, :method => :delete, :confirm => "Are you sure you want to delete #{customer.full_name}?" %>
  </div>
  <h2>
    <%= customer.full_name %>
  </h2>
  <% if customer.image.present? %>
    <p>
      <%= image_tag customer.image %>
    </p>
  <% else %>
    <p class="no_image">
      <em>No customer image.</em>
    </p>
  <% end %>
  <p>
    <b>Phone:</b>
    <%= customer.phone_number %>
  </p>
  <p>
    <b>Email:</b>
    <%= mail_to customer.email %>
  </p>
  <p>
    <b>Notes:</b>
    <%= customer.notes %>
  </p>
</div>